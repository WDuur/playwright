{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "scripts": {
    "test": "npx bddgen && npx playwright test",
    "test:fast": "playwright test -g '@fast'",
    "report": "npx http-server ./cucumber-report -c-1 -a localhost -o index.html",
    "watch:bdd": "nodemon -w ./features -e feature,js,ts --exec \"npx bddgen\"",
    "watch:pw": "playwright test --ui",
    "watch": "run-p watch:*",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.50.0",
    "@types/node": "^20.9.4",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "http-server": "14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^8.3.0",
    "prettier": "3.4.2",
    "prettier-plugin-gherkin": "^3.1.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.36.0"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
